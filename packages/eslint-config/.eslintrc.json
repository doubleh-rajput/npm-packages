{
    "env": {
        "browser": true,
        "es2021": true,
        "node": true
    },
    "extends": [
        "eslint:recommended"
    ],
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "rules" : {
        "no-unused-expressions": ["error", { "allowShortCircuit": true, "allowTernary": true }],
        "no-plusplus": "off",
        "eqeqeq": "off",
        "curly": "error",
        "semi": ["error",  "always",  { "omitLastInOneLineBlock": true}]
    }
}
